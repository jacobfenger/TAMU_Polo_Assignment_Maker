// Display all horses
%table#horses
  %thead
    %tr
      %th Name
      %th Age
      %th Summary
  %tbody
    - @horses.each do |h|
      %tr
        %td= h.name
        %td= h.age
        %td= h.summary

%p 
// Only display if current user is an officer
- if is_officer?
  = link_to 'Add a horse', horses_new_path