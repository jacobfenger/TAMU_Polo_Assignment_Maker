%head
  = stylesheet_link_tag    'users'
.custom_container{:id => "horse_cont"}
  .container
    .row{:class => "justify-content-center"}
      %h1 Add a horse
    .row{:class => "justify-content-center"}
      .login
        = form_for :horse do |h|
          .form-group
            = label :name, 'Name'
            = h.text_field :name, :class => "form-control", :placeholder =>"Horse name"

          .form-group
            = label :age, 'Age'
            = h.text_field :age, :type => "number", :class => "form-control", :placeholder =>"Age"

          .form-group
            = label :summary, 'Summary'
            = h.text_area :summary, :class => "form-control", :placeholder =>"Summary"
            
          .form-group
            = label :image, 'Image'
            = h.file_field :image, :class => "form-control"

          = submit_tag 'Save Changes', :class => "btn btn-primary"
          
      = image_tag "jockey.png", :alt => "A Jockey", :id => "horse_image"